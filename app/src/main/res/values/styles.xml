<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="BubbleProgressBar">
        <attr name="bollColor" format="integer"/>
        <attr name="needBackground" format="boolean"/>
        <attr name="needDifferentColor" format="boolean"/>
        <attr name="color_0" format="string"/>
        <attr name="color_1" format="string"/>
        <attr name="color_2" format="string"/>
        <attr name="color_3" format="string"/>
        <attr name="color_4" format="string"/>
        <attr name="color_5" format="string"/>
        <attr name="color_6" format="string"/>
        <attr name="color_7" format="string"/>
    </declare-styleable>

</resources>
